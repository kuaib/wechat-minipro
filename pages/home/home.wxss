.prod-list-content {
	border-top: 1px solid #ddd;
}

.list-item {
	width: 47%;
	float: left;
}
.list-item .inner {
	position: relative;
}
.list-item .img {
	padding-top: 100%;
	position: relative;
}
.list-item .img image {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}

.list-item.odd {
	padding: 1% 1% 1% 2%;
}

.list-item.even {
	padding: 1% 2% 1% 1%;
}

.limit {
	position: absolute;
	left: 0;
	top: 20rpx;
	padding: 10rpx;
	font-size:24rpx;
	color:#fff;
	padding-right:20rpx;
	border-top-right-radius: 24rpx;
	border-bottom-right-radius: 24rpx;
}

.sku-wrap {
	padding: 20rpx 5rpx;
	display: flex;
	justify-content: space-between;
}

