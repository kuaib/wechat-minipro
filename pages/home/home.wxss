.list-wrap {
    margin: 3% 3% 220rpx 3%;
}

.list-item {
    float: left;
    width: 48.5%;
    border: 1px solid #ddd;
    margin-bottom: 3%;
}

.list-item .img {
    width: 60%;
    padding-top: 60%;
    margin: 0 auto;
    position: relative;
}
.list-item .img image {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
}
.list-item .prod-name {
    text-align: center;
    margin-bottom: 20rpx;
}

.list-item .bottom-bar {
    padding: 10rpx;
}

.odd {
    margin-right: 1.5%;
}
.even {
    margin-left: 1.5%;
}








